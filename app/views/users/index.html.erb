<h1>Users</h1>

<table>
	<thead>
	<tr>
		<th>USERNAME</th>
		<th>EMAIL</th>
		<th>DATE OF BIRTH</th>
		<th colspan="3"></th>
	</tr>
	</thead>

	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.email %></td>
			<td><%= user.birthdate %></td>
		</tr>
	<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New user', new_user_path %>
