<h1>Users</h1>

<p><%= link_to 'Add a new user', new_user_path %></p>

<table>
	<thead>
	<tr>
		<th>USERNAME</th>
		<th>EMAIL</th>
		<th>DATE OF BIRTH</th>
		<th colspan="3"></th>
	</tr>
	</thead>

	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.email %></td>
			<td><%= user.birthdate %></td>
			<td><%= link_to 'Delete', user, method: :delete, data: {confirm: "Are you sure?"} %></td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
		</tr>
	<% end %>
	</tbody>
</table>

<br>
